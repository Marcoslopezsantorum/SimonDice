<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botonamarillo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="36dp"
        android:text="Amarillo"
        app:icon="@android:color/holo_orange_light"
        app:layout_constraintBottom_toTopOf="@+id/botonazúl"
        app:layout_constraintEnd_toStartOf="@+id/botonrojo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonazúl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="417dp"
        android:text="AZÚL"
        app:icon="@android:color/holo_blue_bright"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/botonverde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonamarillo" />

    <Button
        android:id="@+id/botonverde"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="148dp"
        android:text="VERDE"
        app:icon="@android:color/holo_green_dark"
        app:layout_constraintBottom_toTopOf="@+id/botonjugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botonazúl"
        app:layout_constraintTop_toBottomOf="@+id/botonrojo" />

    <Button
        android:id="@+id/botonrojo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="36dp"
        android:text="ROJO"
        app:icon="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/botonverde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botonamarillo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonjugar"
        android:layout_width="137dp"
        android:layout_height="0dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="200dp"
        android:text="jUGAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonverde" />

    <TextView
        android:id="@+id/cuadrotexto"
        android:layout_width="193dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/botonjugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

</androidx.constraintlayout.widget.ConstraintLayout>